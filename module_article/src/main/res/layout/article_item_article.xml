<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <TextView
        android:id="@+id/tv_article_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/shape_red_r2_stroke"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:paddingLeft="@dimen/dp_4"
        android:paddingTop="2dp"
        android:paddingRight="@dimen/dp_4"
        android:paddingBottom="2dp"
        android:text="@string/tag_top"
        android:textColor="@color/color_red"
        android:textSize="10sp"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_article_fresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_article_top"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_red_r2_stroke"
        android:paddingLeft="@dimen/dp_4"
        android:paddingTop="2dp"
        android:paddingRight="@dimen/dp_4"
        android:paddingBottom="2dp"
        android:text="@string/tag_fresh"
        android:textColor="@color/color_red"
        android:textSize="10sp"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_article_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_article_fresh"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@drawable/shape_primary_r2_stroke"
        android:layout_marginTop="10dp"
        android:paddingLeft="@dimen/dp_4"
        android:paddingTop="2dp"
        android:paddingRight="@dimen/dp_4"
        android:paddingBottom="2dp"
        android:textColor="@color/color_primary"
        android:textSize="10sp"
        android:visibility="gone"
        tools:text="@string/app_name"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_article_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_article_tag"
        android:layout_alignBaseline="@+id/tv_article_top"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_gray_999999"
        android:textSize="12sp"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_article_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignBaseline="@+id/tv_article_top"
        android:textColor="@color/color_gray_666666"
        android:textSize="12sp"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_article_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_article_author"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_article_date"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textColor="@color/color_black_333333"/>


    <TextView
        android:id="@+id/tv_article_chapterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_article_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:textColor="@color/color_gray_666666"
        android:textSize="12sp"
        tools:text="@string/app_name" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_gray_999999"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>